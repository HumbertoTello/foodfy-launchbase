{% extends "recipes/layout.njk" %}

{% block content %}
  <div class="button-index-wrap">
    <a href="recipes/create" class="button-index">Cadastrar receita</a>
  </div>
  <div class="cards__grid">
    {% for recipe in recipes %}
      <div class="card">
        <a href="/admin/recipes/{{recipe.id}}">
          <div class="card__img">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
          </div>
        </a>
        <div class="card__info">
          <div class="card__title">
            <p>{{recipe.title}}</p>
          </div>
          <div class="card__author">
            <p>
              {% for chef in chefOptions %}
                {% if recipe.chef_id == chef.id %} {{chef.name}} {% endif %}
              {% endfor %}
            </p>
          </div>
          <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </div>
      
  <div class="push"></div>

{% endblock %}