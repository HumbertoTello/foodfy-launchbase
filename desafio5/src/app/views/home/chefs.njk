{% extends "home/layout.njk" %}

{% block content %}
  <div class="chefs-grid-list">
    {% for chef in chefs %}
      <div class="card-chef-index">
        
          <div class="card__img-chef">
            <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
          </div>
       
        <div class="card__info">
          <div class="card__title chefs-home">
            <p>{{chef.name}}</p>
          </div>
          <p class="total-chef-recipes">
            {% if chef.total_recipes == 0 %}<p class="total-chef-recipes" style="font-size: 12px; width: 70px;">Sem receitas cadastradas</p>{%endif%} 
            {% if chef.total_recipes == 1 %}{{ chef.total_recipes }} receita{%endif%}
            {% if chef.total_recipes > 1%}{{ chef.total_recipes }} receitas{%endif%}
          </p>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}