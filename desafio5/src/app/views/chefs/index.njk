{% extends "recipes/layout.njk" %}

{% block content %}
  <p class="title-page">Gerenciar chefs</p>
  <div class="chefs-grid-list">
    {% for chef in chefs %}
      <div class="card-chef-index">
        <a href="/admin/chefs/{{chef.id}}">
          <div class="card__img-chef">
            <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
          </div>
        </a>
        <div class="card__info">
          <div class="card__title">
            <p>{{chef.name}}</p>
          </div>
          <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="button-index-wrap">
    <a href="chefs/create" class="button-index">Cadastrar chef</a>
  </div>
{% endblock %}